{{define "widget-detail"}}
    {{template "base" .}}
{{end}}

{{define "title"}}Widget Details{{end}}

{{define "content"}}

<div class="bg-gray-100 min-h-screen flex flex-col items-center py-10">
    <div class="bg-white shadow-lg rounded-xl p-8 max-w-2xl w-full relative" x-data="{ openDeleteModal: false, openEditModal: false }">
        <div class="flex justify-between">
            <!-- Widget Header -->
            <div class="flex items-center mb-6">
                <div class="bg-green-800 text-white rounded-full h-14 w-20 flex items-center justify-center mr-4 shadow-md">
                    <span class="text-2xl font-bold">#{{.Widget.ID}}</span>
                </div>
                <div>
                    <h1 class="text-3xl font-semibold text-gray-900">{{.Widget.Name}}</h1>
                </div>
            </div>

            <div class="flex gap-2">
                <button
                type="button"
                title="Edit Widget"
                class="flex items-center gap-1 bg-blue-600 hover:bg-blue-800 text-white font-semibold h-10 py-2 px-2 rounded shadow transition duration-200 cursor-pointer"
                @click="openEditModal = true"
                >
                <span class="material-symbols-outlined text-lg">edit</span>
                </button>

                <button
                type="button"
                title="Delete Widget"
                class="flex items-center gap-1 bg-red-600 hover:bg-red-800 text-white font-semibold h-10 py-2 px-2 rounded shadow transition duration-200 cursor-pointer"
                @click="openDeleteModal = true"
                >
                <span class="material-symbols-outlined text-lg">delete</span>
                </button>
            </div>
        </div>

        <!-- Description -->
        <div class="mb-6">
            <h2 class="text-lg font-medium text-gray-800 mb-1">Description</h2>
            <p class="text-gray-700">{{.Widget.Description}}</p>
        </div>

        <!-- Timestamps -->
        <div class="flex space-x-4 text-xs text-gray-400 mb-8">
            <div>
                <span class="font-semibold">Created:</span> {{.Widget.CreatedAt.Format "Jan 2, 2006 15:04"}}
            </div>
            <div>
                <span class="font-semibold">Updated:</span> {{.Widget.UpdatedAt.Format "Jan 2, 2006 15:04"}}
            </div>
        </div>

        <!-- Components List -->
        <div>
            <h2 class="text-lg font-medium text-gray-800 mb-3">Components</h2>
            {{if .Widget.Components}}
            <ul class="space-y-4">
                {{range .Widget.Components}}
                <li class="bg-gray-50 rounded-lg shadow flex items-center p-4 hover:bg-blue-50 transition">
                    <div class="flex-1">
                        <div class="flex items-center">
                            <span class="text-black font-semibold text-base">{{.Name}}</span>
                            <span class="ml-3 text-xs text-gray-400">#{{.ID}}</span>
                        </div>
                        <div class="text-xs text-gray-500 mt-1">
                            Complexity: 
                            <span class="inline-block bg-blue-100 text-blue-700 rounded px-2 py-0.5 ml-1">{{.Complexity}}</span>
                        </div>
                    </div>
                    <div class="text-right ml-4 text-xs text-gray-400">
                        <div>Created: {{.CreatedAt}}</div>
                        <div>Updated: {{.UpdatedAt}}</div>
                    </div>
                </li>
                {{end}}
            </ul>
            {{else}}
                <p class="text-gray-400 italic">No components found for this widget.</p>
            {{end}}
        </div>

        <!-- Delete Confirmation Modal -->
        <div 
            x-show="openDeleteModal"
            x-cloak
            x-transition:enter="transition ease-out duration-150"
            x-transition:enter-start="opacity-0 scale-90"
            x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-100"
            x-transition:leave-start="opacity-100 scale-100"
            x-transition:leave-end="opacity-0 scale-90"
            class="fixed inset-0 flex items-center justify-center bg-black/50 z-40"
            @keydown.escape.window="openDeleteModal = false"
            @click.away="openDeleteModal = false"
        >
            <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-sm">
                <h2 class="text-lg font-semibold mb-4 text-gray-900">Are you sure?</h2>
                <p class="mb-6 text-gray-700">This will permanently delete the widget <span class="font-bold">{{.Widget.Name}}</span>. This action cannot be undone.</p>
                <div class="flex justify-end space-x-2">
                    <button 
                        class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded cursor-pointer"
                        @click="openDeleteModal = false"
                        type="button"
                    >
                        Cancel
                    </button>
                    <form id="delete-widget-form">
                        <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                        <input type="hidden" name="id" value="{{.Widget.ID}}">
                        <button 
                            type="submit"
                            class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded cursor-pointer"
                        >
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>


          <!-- Edit Modal -->
          <div 
              x-show="openEditModal"
              x-cloak
              x-transition:enter="transition ease-out duration-150"
              x-transition:enter-start="opacity-0 scale-90"
              x-transition:enter-end="opacity-100 scale-100"
              x-transition:leave="transition ease-in duration-100"
              x-transition:leave-start="opacity-100 scale-100"
              x-transition:leave-end="opacity-0 scale-90"
              class="fixed inset-0 flex items-center justify-center bg-black/50 z-40"
              @keydown.escape.window="openEditModal = false"
              @click.away="openEditModal = false"
          >

            <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-sm">
                <form id="edit-widget-form">
                <h2 class="text-xl font-semibold text-gray-800">Edit Widget</h2>
                <div class="mb-4">
                  <label class="block text-gray-700 font-medium mb-1" for="name">Name</label>
                  <input
                    id="name"
                    name="name"
                    type="text"
                    class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Enter name"
                    required
                    value={{.Widget.Name}}
                  />
                </div>
                <div class="mb-6">
                  <label class="block text-gray-700 font-medium mb-1" for="description">Description</label>
                  <textarea
                    id="description"
                    name="description"
                    class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    rows="3"
                    placeholder="Enter description"
                    required
                  >{{.Widget.Description}}</textarea>
                </div>                
                <div class="flex justify-end space-x-2">
                    <button 
                        class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded cursor-pointer"
                        @click="openEditModal = false"
                        type="button"
                    >
                        Cancel
                    </button>
                   
                        <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                        <input type="hidden" name="id" value="{{.Widget.ID}}">
                        <button 
                            type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded cursor-pointer"
                        >
                            Save
                        </button>
                      </div>
                </form>
            </div>
          </div>

        </div>        
    </div>
</div>

<script>
    document.getElementById('delete-widget-form').addEventListener('submit', function(e) {
        e.preventDefault(); // Prevent default form submission
    
        // Collect form data
        const form = e.target;
        const data = {
            id: parseInt(form.id.value)
        };
    
        fetch('/widgets', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': form.csrf_token.value
            },
            body: JSON.stringify(data)
        })
        .then(response => {
            if (response.ok) {
                window.location.href = '/widgets';
            } else {
                alert('Failed to delete widget');
            }
        })
        .catch(error => {
            alert('Error: ' + error);
        });
    });

  document.getElementById('edit-widget-form').addEventListener('submit', function(e) {
      e.preventDefault(); // Prevent default form submission
  
      // Collect form data
      const form = e.target;
      const data = {
          id: parseInt(form.id.value), 
          name: form.name.value,
          description: form.description.value,
      };
  
      console.log("data", data)

      fetch('/widgets', {
          method: 'PATCH',
          headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': form.csrf_token.value
          },
          body: JSON.stringify(data)
      })
      .then(response => {
          if (response.ok) {
              window.location.reload()
          } else {
              alert('Failed to update widget');
          }
      })
      .catch(error => {
          alert('Error: ' + error);
      });
  });
</script>

{{end}}
